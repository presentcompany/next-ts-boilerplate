{
  "name": "next-ts",
  "version": "0.1.0",
  "private": true,
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "scripts": {
    "prepare-husky": "npx husky install",
    "add-husky": "npx husky add .husky/pre-commit \"npx --no-install lint-staged\"",
    "pre-commit": "lint-staged",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint './**/**/*.{js,jsx,ts,tsx}'",
    "lint-fix": "yarn lint --fix",
    "export": "next export",
    "post-build": "next-sitemap",
    "post-install": "yarn run gen:theme-typings",
    "gen:theme-typings": "chakra-cli tokens ./theme/index.(js|ts)>"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.6.7",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@hookform/error-message": "^2.0.0",
    "@types/deep-extend": "^0.4.31",
    "axios": "^0.21.3",
    "deep-extend": "^0.6.0",
    "framer-motion": "^4",
    "next": "11.1.2",
    "next-seo": "^4.26.0",
    "qs": "^6.10.1",
    "react": "17.0.2",
    "react-dom": "^17.0.2",
    "react-google-recaptcha": "^2.1.0",
    "react-hook-form": "^7.17.4",
    "react-query": "^3.21.1",
    "recoil": "^0.4.1"
  },
  "devDependencies": {
    "@axe-core/react": "^4.3.1",
    "@babel/core": "^7.14.6",
    "@chakra-ui/cli": "^1.5.2",
    "@emotion/babel-plugin": "^11.3.0",
    "@types/gtag.js": "^0.0.7",
    "@types/qs": "^6.9.7",
    "@types/react": "17.0.20",
    "@types/react-dom": "^17.0.9",
    "@types/react-google-recaptcha": "^2.1.2",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "eslint": "^7.29.0",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-watch": "^7.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "next-sitemap": "^1.6.184",
    "prettier": "^2.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^5.0.0",
    "typescript": "4.4.2"
  }
}
